          image: zooniverse/fe-content-pages-staging:__IMAGE_TAG__
          resources:
            requests:
              memory: "200Mi"
              cpu: "10m"
            limits:
              memory: "200Mi"
              cpu: "500m"
          livenessProbe:
            httpGet:
              path: /Index
              port: 3000
          readinessProbe:
            httpGet:
              path: /Index
              port: 3000
