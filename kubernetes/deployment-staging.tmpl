                  name: newrelic-license-key
                  key: key
            - name: NODE_ENV
              value: production
            - name: PANOPTES_ENV
              value: production
            - name: APP_ENV
              value: staging
            - name: SENTRY_DSN
              value: https://1f0126a750244108be76957b989081e8@sentry.io/1492498
