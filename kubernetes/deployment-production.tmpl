---
apiVersion: v1
kind: Service
metadata:
  name: zooniverse-org-project-production
spec:
  selector:
    app: zooniverse-org-project-production
  ports:
    - protocol: TCP
      port: 80
      targetPort: 3000
  type: NodePort
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: zooniverse-org-project-production
  labels:
    app: zooniverse-org-project-production
spec:
  replicas: 2
  selector:
    matchLabels:
      app: zooniverse-org-project-production
  template:
    metadata:
      labels:
        app: zooniverse-org-project-production
    spec:
      containers:
        - name: fe-project-production
          image: zooniverse/fe-project:__IMAGE_TAG__
          ports:
            - containerPort: 3000
          env:
            - name: ASSET_PREFIX
              value: https://fe-project.zooniverse.org
            - name: NEWRELIC_LICENSE_KEY
              valueFrom:
                secretKeyRef:
                  name: newrelic-license-key
                  key: key
            - name: NODE_ENV
              value: production
            - name: PANOPTES_ENV
              value: production
            - name: SENTRY_DSN
              value: https://2a50683835694829b4bc3cccc9adcc1b@sentry.io/1492691
---
apiVersion: v1
kind: Service
metadata:
  name: zooniverse-org-content-pages-production
spec:
  selector:
    app: zooniverse-org-content-pages-production
  ports:
    - protocol: TCP
      port: 80
      targetPort: 3000
  type: NodePort
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: zooniverse-org-content-pages-production
  labels:
    app: zooniverse-org-content-pages-production
spec:
  replicas: 2
  selector:
    matchLabels:
      app: zooniverse-org-content-pages-production
  template:
    metadata:
      labels:
        app: zooniverse-org-content-pages-production
    spec:
      containers:
        - name: fe-content-pages-production
          image: zooniverse/fe-content-pages:__IMAGE_TAG__
          ports:
            - containerPort: 3000
          env:
            - name: ASSET_PREFIX
              value: https://fe-content-pages.zooniverse.org
            - name: CONTENTFUL_ACCESS_TOKEN
              valueFrom:
                secretKeyRef:
                  name: contentful-conf
                  key: CONTENTFUL_ACCESS_TOKEN
            - name: CONTENTFUL_SPACE_ID
              valueFrom:
                secretKeyRef:
                  name: contentful-conf
                  key: CONTENTFUL_SPACE_ID
            - name: NEWRELIC_LICENSE_KEY
              valueFrom:
                secretKeyRef:
                  name: newrelic-license-key
                  key: key
            - name: NODE_ENV
              value: production
            - name: PANOPTES_ENV
              value: production
            - name: SENTRY_DSN
              value: https://1f0126a750244108be76957b989081e8@sentry.io/1492498
