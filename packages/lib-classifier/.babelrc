{
  "plugins": [
    "babel-plugin-styled-components",
    ["@babel/plugin-transform-runtime", {
      "helpers": false
    }],
    ["transform-imports", {
      "lodash": {
        "transform": "lodash/${member}"
      },
      "@zooniverse/react-components": {
        "transform": "@zooniverse/react-components/${member}"
      },
      "@zooniverse/subject-viewers": {
        "transform": "@zooniverse/subject-viewers/${member}"
      }
    }],
    ["module-resolver", {
      "alias": {
        "@components": "./src/components",
        "@helpers": "./src/helpers",
        "@hooks": "./src/hooks",
        "@plugins": "./src/plugins",
        "@shared": "./src/components/Classifier/components/shared",
        "@store": "./src/store",
        "@stories": "./src/stories",
        "@test": "./test",
        "@translations": "./src/translations",
        "@viewers": "./src/components/Classifier/components/SubjectViewer"
      }
    }]
  ],
  "presets": [
    ["@babel/preset-react", {
      "runtime": "automatic"
    }],
    ["@babel/preset-env", {
      "modules": false,
      "targets": {
        "esmodules": true
      }
    }]
  ],
  "env": {
    "test": {
      "presets": [
        ["@babel/preset-env", {
          "modules": "commonjs",
        }]
      ]
    }
  }
}
