{
  "name": "@zooniverse/grommet-theme",
  "description": "A Zooniverse theme for the Grommet React library",
  "license": "Apache-2.0",
  "author": "Roger Hutchings <roger@zooniverse.org> (https://www.zooniverse.org/)",
  "version": "0.0.1",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "babel src --out-dir dist",
    "build:watch": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "install": "lerna bootstrap --scope=@zooniverse/grommet-theme",
    "lint": "standard --fix",
    "start": "npm run build:watch"
  },
  "dependencies": {
    "deep-freeze": "0.0.1"
  },
  "peerDependencies": {
    "grommet": "2.0.0-beta.7"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.5.0",
    "standard": "^11.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
