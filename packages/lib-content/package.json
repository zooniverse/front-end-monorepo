{
  "name": "@zooniverse/content",
  "description": "A library of components used in Zooniverse content pages",
  "license": "Apache-2.0",
  "author": "Zooniverse <contact@zooniverse.org> (https://www.zooniverse.org/)",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js"
    },
    "./*": {
      "import": "./dist/esm/*/index.js"
    }
  },
  "sideEffects": false,
  "repository": "https://github.com/zooniverse/front-end-monorepo.git",
  "bugs": "https://github.com/zooniverse/front-end-monorepo/issues",
  "scripts": {
    "build": "pnpm run build:es6",
    "build:es6": "BABEL_ENV=es6 babel ./src/ --out-dir ./dist/esm --copy-files --no-copy-ignored --ignore 'src/**/*.spec.jsx' --ignore 'src/**/*.stories.jsx'",
    "prepare": "pnpm run build",
    "test": "vitest run",
    "test:ci": "vitest run --silent='passed-only' --hideSkippedTests",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6005",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@zooniverse/panoptes-js": "~1.0.0",
    "dayjs": "~1.11.11",
    "i18next": "~24.2.2",
    "nuqs": "^2.8.5",
    "panoptes-client": "~5.6.0",
    "prop-types": "~15.8.1",
    "react-i18next": "~14.1.3",
    "swr": "~2.3.2"
  },
  "peerDependencies": {
    "@next/third-parties": "~14.2.26",
    "@zooniverse/grommet-theme": "4.x.x",
    "@zooniverse/react-components": "~1.15.0",
    "grommet": "2.x.x",
    "grommet-icons": "4.x.x",
    "next": "~14.2.26",
    "react": "~19.2.0",
    "react-dom": "~19.2.0",
    "styled-components": "6.x.x"
  },
  "devDependencies": {
    "@babel/preset-env": "~7.28.3",
    "@babel/preset-react": "~7.27.1",
    "@storybook/addon-a11y": "~9.1.16",
    "@storybook/nextjs": "~9.1.16",
    "@storybook/react": "~9.1.16",
    "@testing-library/dom": "~10.4.1",
    "@testing-library/react": "~16.3.0",
    "@testing-library/user-event": "~14.6.1",
    "@vitejs/plugin-react": "~4.4.1",
    "babel-plugin-module-resolver": "~5.0.0",
    "babel-plugin-styled-components": "~2.1.4",
    "babel-plugin-transform-imports": "~2.0.0",
    "eslint-plugin-jsx-a11y": "~6.10.1",
    "jsdom": "~26.1.0",
    "storybook": "~9.1.16",
    "storybook-react-i18next": "~4.0.11",
    "vitest": "~3.1.3"
  },
  "engines": {
    "node": ">=20.5"
  }
}
