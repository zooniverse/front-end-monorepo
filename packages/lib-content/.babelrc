{
  "plugins": [
    "babel-plugin-styled-components",
    ["transform-imports", {
      "@zooniverse/react-components": {
        "transform": "@zooniverse/react-components/${member}"
      }
    }]
  ],
  "presets": [
    ["@babel/preset-react", {
      "runtime": "automatic"
    }],
    ["@babel/preset-env", {
      "modules": "auto"
    }]
  ],
  "env": {
    "es6": {
      "presets": [
        ["@babel/preset-react", {
          "runtime": "automatic"
        }],
        ["@babel/preset-env", {
          "modules": false,
          "targets": {
            "esmodules": true
          }
        }]
      ]
    },
    "test": {
      "presets": ["next/babel"]
    }
  }
}
