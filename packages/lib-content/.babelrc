{
  "plugins": [
    "babel-plugin-styled-components",
    ["module-resolver", {
      "alias": {
        "@components": "./src/components",
        "@translations": "./src/translations"
      }
    }]
  ],
  "presets": [
    ["@babel/preset-react", {
      "runtime": "automatic"
    }],
    ["@babel/preset-env", {
      "modules": "auto"
    }]
  ],
  "env": {
    "es6": {
      "presets": [
        ["@babel/preset-react", {
          "runtime": "automatic"
        }],
        ["@babel/preset-env", {
          "modules": false,
          "targets": {
            "esmodules": true
          }
        }]
      ]
    },
    "test": {
      "presets": ["next/babel"]
    }
  }
}
