.slug-editor
  &__form-help
    color: inherit
    font: inherit

  &__form-label
    color: inherit
    font: inherit

  &__form-input
    border: 1px solid
    border-radius: 2px
    box-shadow: 1px 2px 5px -1px rgba(0,0,0,0.2) inset
    box-sizing: border-box
    color: inherit
    display: block
    font: inherit
    padding: 0.5em 1vw
    width: 100%