{
  "plugins": [
    "babel-plugin-styled-components",
    ["transform-imports", {
      "lodash": {
        "transform": "lodash/${member}"
      }
    }],
    ["module-resolver", {
      "alias": {
        "@storybook_config": "./.storybook"
      }
    }]
  ],
  "presets": [
    ["@babel/preset-react", {
      "runtime": "automatic"
    }],
    ["@babel/preset-env", {
      "modules": "auto"
    }]
  ],
  "env": {
    "es6": {
      "presets": [
        ["@babel/preset-react", {
          "runtime": "automatic"
        }],
        ["@babel/preset-env", {
          "modules": false,
          "targets": {
            "esmodules": true
          }
        }]
      ]
    }
  }
}
