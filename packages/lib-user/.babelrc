{
  "plugins": [
    ["@babel/plugin-transform-runtime", {
      "helpers": false
    }],
    ["module-resolver", {
      "alias": {
        "@components": "./src/components",
        "@hooks": "./src/hooks",
        "@utils": "./src/utils"
      }
    }]
  ],
  "presets": [
    ["@babel/preset-react", {
      "runtime": "automatic"
    }],
    ["@babel/preset-env", {
      "modules": "auto",
      "targets": {
        "browsers": "last 2 versions"
      }
    }]
  ],
  "env": {
    "es6": {
      "presets": [
        ["@babel/preset-react", {
          "runtime": "automatic"
        }],
        ["@babel/preset-env", {
          "modules": false,
          "targets": {
            "esmodules": true
          }
        }]
      ]
    }
  }
}
